{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "types": [],
        "paths": {
            "@shared/*": ["src/app/shared/*"],
            "@services/*": ["src/app/services/*"],
            "@main/*": ["src/app/main/*"]
        }
    },
    "files": [
      "src/main.ts",
      "src/polyfills.ts"
    ],
    "include": [
      "src/**/*.d.ts"
    ]
}
